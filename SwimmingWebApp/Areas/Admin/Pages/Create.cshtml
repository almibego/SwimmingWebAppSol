@page
@model SwimmingWebApp.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить тренировку</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Training.SwimmerId" class="control-label">Пловец</label>
                <select asp-for="Training.SwimmerId" class="form-control" asp-items="ViewBag.SwimmerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Training.TrainingDate" class="control-label">Дата тренировки</label>
                <input asp-for="Training.TrainingDate" class="form-control" />
                <span asp-validation-for="Training.TrainingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.TrainingVolume" class="control-label">Объем тренировки</label>
                <input asp-for="Training.TrainingVolume" class="form-control" />
                <span asp-validation-for="Training.TrainingVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.KeyAssignment" class="control-label">Ключевое задание</label>
                <input asp-for="Training.KeyAssignment" class="form-control" />
                <span asp-validation-for="Training.KeyAssignment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.KeyAssignmentBestTime" class="control-label">Лучшее время ключевого задания</label>
                <input asp-for="Training.KeyAssignmentBestTime" class="form-control" />
                <span asp-validation-for="Training.KeyAssignmentBestTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.Feeling" class="control-label">Самочувствие</label>
                <input asp-for="Training.Feeling" class="form-control" />
                <span asp-validation-for="Training.Feeling" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к администрированию тренировок</a>
</div>

