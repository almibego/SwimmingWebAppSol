@model ListViewModel<Swimmer>
@using Microsoft.AspNetCore.Identity;
@using SwimmingWebApp.DAL.Entities;
@inject SignInManager<ApplicationUser> signInManager


@{
    ViewData["Title"] = "Пловцы";
    var categories = ViewData["Swimmers"] as IEnumerable<Swimmer>;

}

@if (signInManager.IsSignedIn(User))
{
    <h1>Пловцы</h1>

    <div class="row">
        <div class="col-2">
            <div class="dropdown mt-2">                
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item"
                       asp-action="Index"
                       asp-controller="Swimmers">Все</a>
                    @foreach (var item in categories)
                    {
                        <a class="dropdown-item"
                           asp-action="Index"
                           asp-controller="Swimmers"
                           asp-route-group="@item.SwimmerId"
                           asp-route-pageNo="1">@item.FullName</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="card-group" id="list">
                <partial name="_ListPartial" model="@Model" />
            </div>
            <pager page-current="@Model.CurrentPage" page-total="@Model.TotalPages" action="Index" controller="Swimmers"> </pager>
        </div>
    </div>
}
else
{
    <h2>Для доступа к настоящей странице, пожалуйста, <a asp-area="Identity" asp-page="/Account/Login">войдите</a> в свою учетную запись.</h2>
}