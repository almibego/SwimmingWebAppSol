@page
@model SwimmingWebApp.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Администрирование тренировок</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Дата тренировки
            </th>
            <th>
                Объем тренировки
            </th>
            <th>
                Ключевое задание
            </th>
            <th>
                Лучшее время задания
            </th>
            <th>
                Самочувствие
            </th>
            <th>
                Пловец
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Training) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingVolume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyAssignment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeyAssignmentBestTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feeling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Swimmer.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrainingId" class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a> 
                <a asp-page="./Delete" asp-route-id="@item.TrainingId" class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
